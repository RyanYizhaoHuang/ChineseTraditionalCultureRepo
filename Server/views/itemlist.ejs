<!--contact.ejs-->
<% include partials/header.ejs %>
<% include partials/navigationBar.ejs %> 

<!-- Body Container -->
<div class="container">
    <h2><%= title %></h2>
    <div class="row">
        <!--Left materials list-->
     <div class="col-md-8">
      <ul class="media-list">
        <% for (let count = 0; count < resources.length; count++) { %>

            <li class="media boxshadow">
                <div class="
                    media-left listImageLink">
                    <a href="/resource/<%= resources[count]._id %>">
                        <img class="img-responsive img-rounded"  src="https://i2.wp.com/beebom.com/wp-content/uploads/2016/01/Reverse-Image-Search-Engines-Apps-And-Its-Uses-2016.jpg?w=640&ssl=1" class="img-responsive" alt="...">
                    </a>
                            </div>
                            <div class="media-body">
                            <h4 class="media-heading"><%= resources[count].topic%></h4>
                            <p>
                            
                            <i class="fa fa-calendar" aria-hidden="true"></i> 发布时间  <span><%= moment(resources[count].publishDate).format('YYYY/MM/DD') %></span> 
                            <i class="fa fa-podcast" aria-hidden="true"></i> 发布者： <span><%= resources[count].publisher %></span>
                            </p>
                            <p>
                            <i class="fa fa-user" aria-hidden="true"></i> 主讲人 <span><%= resources[count].host %></span>
                            </p>                            
                            <%= resources[count].introduction %>
                            <p><a href="/resource/<%= resources[count]._id %>">点击浏览</a></p>
                            </div>
                        </li>
        <% } %>
        </ul>
     </div>
     <!--End Left materials list-->                     
        <!--Right materials list-->           
        <div class="col-md-4">
            <!--Thumbnail List-->
            <div class="thumbnail boxshadow">
                <!-- 16:9 aspect ratio -->
                <div class="embed-responsive embed-responsive-16by9">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/UHgOUOxq3-Y?ecver=1" frameborder="0" allowfullscreen></iframe>
                </div>
                <div class="caption">
                <h3>Thumbnail caption</h3>
                <p>...</p>
                </div>
            </div>     
            <!--End Thumbnail List-->
        </div>
        <!--End Right materials list-->           
    </div>
</div>
<% include partials/footer.ejs %>